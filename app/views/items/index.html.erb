<p style="color: green"><%= notice %></p>

<h1>Items</h1>


<table>
  <thead>
    <tr>
      <th>Name</th> 
      <th>Description</th>
      <th>Count in Inventory</th> 
      <th>Group</th> 
      <th></th> 
      <th colspan="4"></th>
        <br>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
          <td><%= link_to "#{item.name}", item %></td> 
          <td><%=item.description %></td> 
          <td><%=item.count%></td> 
          <td><%= if item.group != "No-Group" then item.group else "N/A" end %></td> 
          <td><%= link_to 'Edit', edit_item_path(item)  %> </td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to "New item", new_item_path %>
